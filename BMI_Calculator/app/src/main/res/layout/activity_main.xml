<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"


        android:fontFamily="sans-serif-condensed-light"
        android:text="BMI CALCULATOR"
        android:textAlignment="center"
        android:textColor="#0DE616"
        android:textSize="40dp" />


    <EditText
        android:id="@+id/ET_weight"
        android:layout_width="match_parent"

        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:layout_centerInParent="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="156dp"
        android:background="@drawable/field_style"
        android:backgroundTint="#FAF7F3F3"
        android:hint="Enter Your Weight(Kgs)"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textColorHint="@android:color/background_dark" />

    <EditText
        android:id="@+id/ET_height"
        android:layout_width="395dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="224dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/field_style"
        android:hint="Enter Your Height(Cms)"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textColorHint="@android:color/background_dark" />

    <Button
        android:id="@+id/btn_calculate"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/ET_height"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-73dp"
        android:background="@drawable/button_style"
        android:backgroundTint="#A68BC34A"
        android:text="Calculate" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        android:layout_marginBottom="20dp"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-3940256099942544/6300978111"/>

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"

        android:layout_centerInParent="true"
        android:layout_marginBottom="174dp"
        android:textAlignment="center"
        android:textColor="#0C18E6"
        android:textSize="30sp" />

</RelativeLayout>